            "method": "GET",
            "url": {
                "en": "\/files?type=[type]&filePath=[path]"
            },
            "description": {
                "en": "Used to retrieve a specific item."
            },
            "parameters": [
                {
                    "name": "type",
                    "description": {
                        "en": "Type."
                    }
                },
                {
                    "name": "filePath",
                    "description": {
                        "en": "path."
                    }
                }
            ],
            "example": {
                "url": "\/files\/type=image&filePath=product\/image.jpg",
                "statusCode": "200"
            }
        },
        "post": {
            "method": "POST",
            "url": {
                "en": "\/files"
            },
            "description": {
